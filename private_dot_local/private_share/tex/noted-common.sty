% ------------ Proofs -------------
\let\proof\relax
\let\endproof\relax

\declaretheoremstyle[
  headfont={\itshape},
  notefont={\normalfont},
  bodyfont={\normalfont},
  headpunct={.\ },
  headformat={\NAME},
]{proof}

\declaretheorem[
  style = proof,
  qed = \qedsymbol,
]{proof}

\declaretheorem[
  style = proof,
  title = {Sketch of Proof},
  qed = \qedsymbol,
]{proofsketch}

\tcolorboxenvironment{proof}{
  proof like,
  lighter black theme,
}

\tcolorboxenvironment{proofsketch}{
  proof like,
  lighter black theme,
}

