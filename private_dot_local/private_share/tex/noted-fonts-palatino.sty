  %% mathbb: AMS
  %% mathcal: cmsy (Computer Modern Math Symbols)
  %% mathfrak: Euler fraktur
  %% mathscr: Ralph Smith's Formal Script
  %\RequirePackage[%
  %  bb=ams,
  %  cal=cm,
  %  frak=euler,
  %  scr=rsfs
  %]{mathalfa}
\else
  \iftexpadtex
    \RequirePackage[no-math]{fontspec}

    \setmainfont[
      SmallCapsFont = Palatino Small Caps,
      BoldFont = Palatino Bold,
      ItalicFont = Palatino Italic,
    ]{Palatino}
    \setsansfont[
      BoldFont = Optima Bold,
      ItalicFont= Optima Italic,
    ]{Optima}

    \RequirePackage[notext,not1]{stix}
  \else
    \RequirePackage[warnings-off={mathtools-colon,mathtools-overbracket}]{unicode-math}

    \setmainfont[
      SmallCapsFont = Palatino Small Caps,
    ]{Palatino}
    \setsansfont{Optima}

    \setmathfont{STIX Two Math}
