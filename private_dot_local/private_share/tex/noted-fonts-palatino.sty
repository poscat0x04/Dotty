\RequirePackage{iftex}

% ------------- Fonts -----------------


\ifPDFTeX
  \RequirePackage{newpxtext}
  \RequirePackage[scaled=0.95]{helvet}

  \RequirePackage[notext,not1]{stix2}

  %% math font variations
