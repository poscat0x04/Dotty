% A latex macro set for (mathematical) note taking
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{noted}

% -------- Engine detection ----------
\RequirePackage{iftex}
\RequirePackage{etoolbox}

% -------- Options parsing -----------
\RequirePackage{kvoptions}

\DeclareStringOption[]{name}
\DeclareStringOption[]{email}
\DeclareStringOption[]{title}
\DeclareBoolOption{intolerance}
\DeclareBoolOption{consolas}
\DeclareBoolOption{nomacro}
\ProcessKeyvalOptions*

% -------- Title and author ----------
\providecommand\titlename{\noted@title}
\providecommand\authorname{\noted@name}

\title{\titlename}
\ifdefempty{\noted@email}{
  \author{\authorname}
}{
  \author{%
    \authorname \\
    \href{mailto:\noted@email}{\texttt{\noted@email}}}
}

% ------------ Math input -------------
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{mathtools}

% -------- Theorems and proofs --------
\RequirePackage{amsthm}

% --------- Better colors -------------
\RequirePackage[dvipsnames]{xcolor}

% -------- Header and footer ----------
\RequirePackage{fancyhdr}

\pagestyle{fancy}
\fancyhf{}
\fancyhfoffset[RO]{.23\paperwidth}
\renewcommand\headrulewidth{0pt}
\renewcommand{\sectionmark}[1]{\markboth{#1}{}}
\renewcommand{\subsectionmark}[1]{\markright{#1}{}}
\fancyhead[LO]{\textsc{\leftmark}}
\fancyhead[RO]{\footnotesize \textit{\rightmark}~~~~ \thepage}

% ----------- Indices -----------------
\RequirePackage[quiet]{imakeidx} % TODO: switch to xindy when texpad adds support for it
\indexsetup{firstpagestyle=fancy}
\makeindex[title=Index,intoc=true]
\newcommand\idx[1]{#1\index{#1}}

% ----- Hyperlinks & PDF metadata -----
\RequirePackage[%
  draft=false,
  ocgcolorlinks
]{hyperref}
\hypersetup{%
  colorlinks=true,
  linkcolor=BrickRed,
  linkbordercolor=BrickRed,
  citecolor=Green,
  citebordercolor=Green,
  filecolor=Mulberry,
  filebordercolor=Mulberry,
  urlcolor=NavyBlue,
  urlbordercolor=NavyBlue,
  menucolor=BrickRed,
  menubordercolor=BrickRed,
  runcolor=Mulberry,
  runbordercolor=Mulberry,
  CJKbookmarks=true,
  bookmarksnumbered=true,
  % https://tex.stackexchange.com/questions/3450/make-pdf-open-in-fill-window-mode-with-hyperref
  pdfstartview=,
  pdftitle={\titlename},
  pdfauthor={\authorname},
  pdfpagemode=FullScreen
}

% --------- Better marginpar ----------
\RequirePackage{marginnote}

% --------- Better listings -----------
\RequirePackage{enumitem}

% --------- ISO 8601 date -------------
\RequirePackage[style=iso]{datetime2}

% --------- Page geometry -------------
\RequirePackage[%
  paperheight=297mm,
  paperwidth=223mm,
  left = 0.09\paperwidth,
  bottom = 0.118\paperheight,
  top = 0.118\paperheight,
  right = 0.3\paperwidth,
  footskip = 0.04\paperwidth,
  marginparwidth = 0.202\paperwidth,
  marginparsep = 0.02\paperwidth
]{geometry}

\fancypagestyle{fancypart}{%
  \fancyhf{}%
  \newlength{\myoddoffset}%
  \setlength{\myoddoffset}{\marginparwidth + \marginparsep}%
  \fancyfootoffset[rh]{\myoddoffset}%
  \renewcommand{\headrulewidth}{0pt}
  \fancyfoot[L]{\footnotesize \thepage}%
}%

\usepackage{titlesec}
\titleformat{\part}[hang]{{\thispagestyle{fancypart}}\Huge\bfseries}{\marginnote{%
  \begin{tcolorbox}[width=\marginparwidth,height=\marginparwidth/2,colback=black!50!white,colframe=black!50!white,center title,fonttitle=\bfseries\normalsize,title=PART,text fill]
    \begin{center}
    {\color{white}\thepart}
    \end{center}
  \end{tcolorbox}
}[-1.25in]}{0pt}{\Huge\bfseries\itshape}

% ---------- Title page ---------------
\let\oldmktitle\maketitle % TODO: switch to NewCommandCopy when texpad supports it
\renewcommand\maketitle{
  \begin{titlepage}
  \newgeometry{%
    margin=.11\paperwidth,
    bottom=0.118\paperheight
  }
  \pagestyle{empty}
  \oldmktitle
  \thispagestyle{empty}
  \tableofcontents
  \restoregeometry
  \end{titlepage}
}

% ------------ Fonts ------------------
\ifPDFTeX
  \usepackage{libertineRoman}
  \usepackage{biolinum}
\else
  \RequirePackage{fontspec}

  %% roman and sans-serif font
  \setmainfont[%
    %SmallCapsFont={Linux Libertine},
    %SmallCapsFeatures={Letters=SmallCaps},
    ItalicFont={Linux Libertine Italic},
    BoldFont={Linux Libertine Bold}
  ]{Linux Libertine}
  \setsansfont[%
    ItalicFont={Linux Biolinum Italic},
    BoldFont={Linux Biolinum Bold},
  ]{Linux Biolinum}

  %% monospaced font
  \setmonofont[Scale=0.92]{Sarasa Mono SC}
\fi

%% normal math font (symbol + text)
\RequirePackage[libertine]{newtxmath} % TODO: consider supporting STIX Two Math when texpad adds support for unicode-math

%% math font variations
%%
%% mathbb: AMS
%% mathcal: cmsy (Computer Modern Math Symbols)
%% mathfrak: Euler fraktur
%% mathscr: Ralph Smith's Formal Script
\RequirePackage[%
  bb=ams,
  cal=cm,
  frak=euler,
  scr=rsfs
]{mathalfa}

% ---------- Chinese input ------------
\ifXeTeX
  \RequirePackage{xeCJK}

  \setCJKmainfont[ItalicFont={KaiTi SC}]{Songti SC}
  \setCJKsansfont{PingFang SC}
  \setCJKmonofont{Sarasa Mono SC}
  \newCJKfontfamily[song]\songti{Songti SC}
  \newCJKfontfamily[kai]\kaiti{KaiTi SC}
  \newCJKfontfamily[hei]\heiti{PingFang SC}
\else\ifLuaTeX
  \RequirePackage{luatexja}
  \RequirePackage{luatexja-fontspec}

  \setmainjfont{Songti SC}
  \setsansjfont{PingFang SC}
  \setmonojfont{Sarasa Mono SC}
\fi\fi

% ----------- microtype ---------------
\RequirePackage[%
  activate=true,
  tracking=true
]{microtype}

% --------- Supress warnings ----------
\ifnoted@intolerance
\else
  \hbadness=10000
\fi

% ---------- Colored boxes ------------
\RequirePackage[many]{tcolorbox}


% ---------- Load macros --------------
\ifnoted@nomacro
\else
  \RequirePackage{noted-macro}
\fi
